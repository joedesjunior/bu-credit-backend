<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="joedesjunior">
        <createTable tableName="debt">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="total_amount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="creditor_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="due_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="number_of_installments" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="joedesjunior">
        <createTable tableName="payment">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="installment_number" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="amount_paid" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="payment_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="debt_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="payment"
                baseColumnNames="debt_id"
                constraintName="fk_payment_debt"
                referencedTableName="debt"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>